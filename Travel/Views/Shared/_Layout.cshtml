@using Travel.Helpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="row">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".top">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse top">
                <div class="col-xs-7">
                    <ul class="nav navbar-nav nav-top">
                        <li class="li-border-right"><a>HOME</a></li>
                        <li class="li-border-right"><a>FAQS</a></li>
                        <li class="li-border-right"><a>CONTACT</a></li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">USD <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("USD", "Index", "Home", null, new { id = "USD" })</li>
                                <li>@Html.ActionLink("POUND", "Index", "Home", null, new { id = "POUND" })</li>
                                <li>@Html.ActionLink("EURO", "Index", "Home", null, new { id = "EURO" })</li>
                                <li>@Html.ActionLink("RAND", "Index", "Home", null, new { id = "RAND" })</li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="icon-bar col-xs-5">
                    <ul class="nav navbar-nav nav-right">
                        <li><a href="#" class="facebook"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#" class="twitter"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#" class="google"><i class="fa fa-google"></i></a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-icon-bar glyphicon-earphone"></i></a></li>
                        <li><a href="#"><i class="glyphicon glyphicon-icon-bar glyphicon-envelope"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <hr />
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".right">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Travel</a>
        </div>
        <div class="navbar-collapse collapse right">
            <ul class="nav navbar-nav nav-right">
                <li class="active">@Html.ActionLinkNonEncoded("<i class=\'glyphicon glyphicon-home\'></i>HOME", "Index", new { Controller = "Home" }, new { @class = "" })</li>
                <li>@Html.ActionLinkNonEncoded("<i class=\'glyphicon glyphicon-plane\'></i>FLIGHTS", "Flights", new { Controller = "Home" }, new { @class = "" })</li>
                <li>@Html.ActionLinkNonEncoded("<i class=\'glyphicon glyphicon-cutlery\'></i>HOTELS", "Hotels", new { Controller = "Home" }, new { @class = "" })</li>
                <li>@Html.ActionLinkNonEncoded("<i class=\'glyphicon glyphicon-globe\'></i>HOLIDAYS", "Holidays", new { Controller = "Home" }, new { @class = "" })</li>
                <li>@Html.ActionLinkNonEncoded("<i class=\'glyphicon glyphicon-pencil\'></i>BLOG", "Blog", new { Controller = "Home" }, new { @class = "" })</li>
                <li>@Html.ActionLinkNonEncoded("<i class=\'glyphicon glyphicon-earphone\'></i>CONTACT", "Contact", new { Controller = "Home" }, new { @class = "" })</li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $('body').css('background-image', 'url(/images/Screenshot_1.png)');

            var urls = ['/images/Screenshot_1.png', '/images/Screenshot_2.png', '/images/Screenshot_3.png', '/images/Screenshot_4.png', '/images/Screenshot_5.png', '/images/Screenshot_6.png'];
            var cout = 1;
            setInterval(function () {
                $('body').css('background-image', 'url("' + urls[cout] + '")');
                cout == urls.length - 1 ? cout = 0 : cout++;
            }, 15000);
        });

        $(function () {
            $('.nav a').filter(function () {
                return this.href == location.href
            }).parent().addClass('active').siblings().removeClass('active')

            $('.nav a').click(function () {
                $(this).parent().addClass('active').siblings().removeClass('active')
            })
        })
    </script>
</body>
</html>
